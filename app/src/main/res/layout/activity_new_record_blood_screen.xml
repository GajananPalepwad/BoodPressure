<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F5F5F5"
    tools:context=".ui.blood.new_record_blood.NewRecordBloodScreen">


    <RelativeLayout
        android:id="@+id/rl_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/color_4969D7">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingHorizontal="@dimen/_5sdp"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp"
            android:src="@drawable/ic_back_toolbar"
            app:tint="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_toEndOf="@+id/img_back"
            android:autoSizeMaxTextSize="@dimen/_22ssp"
            android:autoSizeMinTextSize="@dimen/_10ssp"
            android:autoSizeStepGranularity="@dimen/_1ssp"
            android:ellipsize="end"
            android:fontFamily="@font/montserrat_semibold"
            android:gravity="start"
            android:maxLines="1"
            android:text="@string/new_record"
            android:textColor="@color/color_F8FAFB"
            android:textSize="@dimen/_18ssp"
            android:visibility="visible" />
    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_bottom"
        android:layout_below="@+id/rl_toolbar"
        android:layout_marginTop="@dimen/_15sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_fill_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_15sdp"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_10sdp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:autoSizeMaxTextSize="@dimen/_16ssp"
                                android:autoSizeMinTextSize="@dimen/_10ssp"
                                android:fontFamily="@font/montserrat_semibold"
                                android:lines="1"
                                android:text="@string/systolic"
                                android:textColor="@color/color_323232"
                                android:textSize="@dimen/_16ssp"
                                app:autoSizeStepGranularity="1sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:fontFamily="@font/montserrat_regular"
                                android:text="@string/mmhg"
                                android:textColor="@color/color_323232"
                                android:textSize="@dimen/_9ssp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/iv_reduce_sys"
                                android:layout_width="@dimen/_18sdp"
                                android:layout_height="@dimen/_18sdp"
                                android:src="@drawable/ic_reduce" />

                            <EditText
                                android:id="@+id/edt_sys"
                                android:layout_width="@dimen/_55sdp"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/_10sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:background="@drawable/bg_edt_info_new_record"
                                android:fontFamily="@font/montserrat_bold"
                                android:gravity="center"
                                android:inputType="number"
                                android:maxLength="3"
                                android:paddingVertical="@dimen/_5sdp"
                                android:paddingTop="@dimen/_5sdp"
                                android:paddingBottom="@dimen/_5sdp"
                                android:text="120"
                                android:textColor="@color/color_1E252B"
                                android:textSize="@dimen/_18ssp" />

                            <ImageView
                                android:id="@+id/iv_increase_sys"
                                android:layout_width="@dimen/_18sdp"
                                android:layout_height="@dimen/_18sdp"
                                android:src="@drawable/ic_increase" />
                        </LinearLayout>
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@color/color_CDD7E5" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:autoSizeMaxTextSize="@dimen/_16ssp"
                                android:autoSizeMinTextSize="@dimen/_10ssp"
                                android:fontFamily="@font/montserrat_semibold"
                                android:lines="1"
                                android:text="@string/diastolic"
                                android:textColor="@color/color_323232"
                                android:textSize="@dimen/_16ssp"
                                app:autoSizeStepGranularity="1sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:fontFamily="@font/montserrat_regular"
                                android:text="@string/mmhg"
                                android:textColor="@color/color_323232"
                                android:textSize="@dimen/_9ssp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/iv_reduce_dia"
                                android:layout_width="@dimen/_18sdp"
                                android:layout_height="@dimen/_18sdp"
                                android:src="@drawable/ic_reduce" />

                            <EditText
                                android:id="@+id/edt_dia"
                                android:layout_width="@dimen/_55sdp"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/_10sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:background="@drawable/bg_edt_info_new_record"
                                android:fontFamily="@font/montserrat_bold"
                                android:gravity="center"
                                android:inputType="number"
                                android:maxLength="3"
                                android:paddingVertical="@dimen/_5sdp"
                                android:paddingTop="@dimen/_5sdp"
                                android:paddingBottom="@dimen/_5sdp"
                                android:text="80"
                                android:textColor="@color/color_1E252B"
                                android:textSize="@dimen/_18ssp" />

                            <ImageView
                                android:id="@+id/iv_increase_dia"
                                android:layout_width="@dimen/_18sdp"
                                android:layout_height="@dimen/_18sdp"
                                android:src="@drawable/ic_increase" />
                        </LinearLayout>
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@color/color_CDD7E5" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:autoSizeMaxTextSize="@dimen/_16ssp"
                                android:autoSizeMinTextSize="@dimen/_10ssp"
                                android:fontFamily="@font/montserrat_semibold"
                                android:lines="1"
                                android:text="@string/pulse"
                                android:textColor="@color/color_323232"
                                android:textSize="@dimen/_16ssp"
                                app:autoSizeStepGranularity="1sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:fontFamily="@font/montserrat_regular"
                                android:text="@string/BMP"
                                android:textColor="@color/color_323232"
                                android:textSize="@dimen/_9ssp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/iv_reduce_pulse"
                                android:layout_width="@dimen/_18sdp"
                                android:layout_height="@dimen/_18sdp"
                                android:src="@drawable/ic_reduce" />

                            <EditText
                                android:id="@+id/edt_pulse"
                                android:layout_width="@dimen/_55sdp"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/_10sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:background="@drawable/bg_edt_info_new_record"
                                android:fontFamily="@font/montserrat_bold"
                                android:gravity="center"
                                android:inputType="number"
                                android:maxLength="3"
                                android:paddingVertical="@dimen/_5sdp"
                                android:paddingTop="@dimen/_5sdp"
                                android:paddingBottom="@dimen/_5sdp"
                                android:text="80"
                                android:textColor="@color/color_1E252B"
                                android:textSize="@dimen/_18ssp" />

                            <ImageView
                                android:id="@+id/iv_increase_pulse"
                                android:layout_width="@dimen/_18sdp"
                                android:layout_height="@dimen/_18sdp"
                                android:src="@drawable/ic_increase" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:id="@+id/rl_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_view_fill_info">

                <ImageView
                    android:id="@+id/iv_process1"
                    android:layout_width="@dimen/_45sdp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_process" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_3sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:layout_toStartOf="@+id/iv_process2"
                    android:layout_toEndOf="@+id/iv_process1"
                    app:cardCornerRadius="@dimen/_10sdp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_10sdp">

                        <ImageView
                            android:id="@+id/iv_status"
                            android:layout_width="@dimen/_23sdp"
                            android:layout_height="@dimen/_19sdp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_status_05" />

                        <TextView
                            android:id="@+id/tv_type_info"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_toEndOf="@+id/iv_status"
                            android:ellipsize="marquee"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:fontFamily="@font/montserrat_bold"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:scrollHorizontally="true"
                            android:singleLine="true"
                            android:text="@string/hypotension"
                            android:textColor="@color/color_4969D7"
                            android:textSize="@dimen/_14ssp" />

                        <TextView
                            android:id="@+id/tv_limited"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_type_info"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_toEndOf="@+id/iv_status"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="@string/sys_180_or_dia_120"
                            android:textColor="@color/color_3E5574"
                            android:textSize="@dimen/_10ssp" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <ImageView
                    android:id="@+id/iv_process2"
                    android:layout_width="@dimen/_45sdp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_process" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_sys_dia_pul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_info"
                android:layout_marginHorizontal="@dimen/_14sdp"
                android:layout_marginLeft="@dimen/_14sdp"
                android:layout_marginRight="@dimen/_14sdp"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/border_number_picker"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingVertical="@dimen/_5sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp">

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_weight="1"
                    android:background="@drawable/border_number_picker"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingVertical="@dimen/_5sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp">

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/border_number_picker"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingVertical="@dimen/_5sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp">

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_more_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_info"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_help"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_info_outline" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:fontFamily="@font/montserrat_regular"
                    android:paddingEnd="@dimen/_5sdp"
                    android:text="@string/More_info"
                    android:textColor="@color/color_4969D7"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="italic" />
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ll_type_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_info"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="@dimen/_14sdp"
                android:layout_marginLeft="@dimen/_14sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_14sdp"
                android:background="@drawable/border_type_hypotension"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/_16sdp"
                android:paddingVertical="@dimen/_10sdp"
                android:paddingLeft="@dimen/_16sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingRight="@dimen/_16sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:visibility="gone"
                app:layout_constrainedHeight="true"
                app:layout_constrainedWidth="true" />

            <HorizontalScrollView
                android:id="@+id/hs_stage_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_more_info"
                android:layout_marginHorizontal="@dimen/_14sdp"
                android:layout_marginLeft="@dimen/_14sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_14sdp"
                android:scrollbars="none"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/ll_stage_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_view_01"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_select_01"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_select_view"
                            android:visibility="invisible" />

                        <RelativeLayout
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_7sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@drawable/border_stroke_view">

                            <TextView
                                android:layout_width="@dimen/_25sdp"
                                android:layout_height="match_parent"
                                android:layout_centerVertical="true"
                                android:background="@drawable/ic_level_01" />

                            <View
                                android:id="@+id/border_view_01"
                                android:layout_width="@dimen/_25sdp"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:background="@drawable/border_stroke_view"
                                android:visibility="invisible" />
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_view_02"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="1.5dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_select_02"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_select_view"
                            android:visibility="visible" />

                        <RelativeLayout
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_7sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@android:color/transparent">

                            <TextView
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="match_parent"
                                android:layout_centerVertical="true"
                                android:background="@drawable/ic_level_02" />

                            <View
                                android:id="@+id/border_view_02"
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:background="@drawable/border_stroke_view" />
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_view_03"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="1.5dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_select_03"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_select_view"
                            android:visibility="invisible" />

                        <RelativeLayout
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_7sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@android:color/transparent">

                            <TextView
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="match_parent"
                                android:layout_centerVertical="true"
                                android:background="@drawable/ic_level_03" />

                            <View
                                android:id="@+id/border_view_03"
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:background="@drawable/border_stroke_view"
                                android:visibility="invisible" />
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_view_04"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="1.5dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_select_04"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_select_view"
                            android:visibility="invisible" />

                        <RelativeLayout
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_7sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@android:color/transparent">

                            <TextView
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="match_parent"
                                android:layout_centerVertical="true"
                                android:background="@drawable/ic_level_04" />

                            <View
                                android:id="@+id/border_view_04"
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:background="@drawable/border_stroke_view"
                                android:visibility="invisible" />
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_view_05"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="1.5dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_select_05"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_select_view"
                            android:visibility="invisible" />

                        <RelativeLayout
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_7sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@android:color/transparent">

                            <TextView
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="match_parent"
                                android:layout_centerVertical="true"
                                android:background="@drawable/ic_level_05" />

                            <View
                                android:id="@+id/border_view_05"
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:background="@drawable/border_stroke_view"
                                android:visibility="invisible" />
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_view_06"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="1.5dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_select_06"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_select_view"
                            android:visibility="invisible" />

                        <RelativeLayout
                            android:layout_width="@dimen/_25sdp"
